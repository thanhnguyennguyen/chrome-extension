{
  "manifest_version": 2,

  "name": "Facebook add friend bot",
  "description": "This extension helps to send friend requests to all people who like a post",
  "version": "1.0",
  "author": "NguyenNguyen",
  "icons": { "16": "icon16.png",
           "48": "icon.png",
          "128": "icon128.png" },
  "background" : {
    "scripts" : ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png"
  },
  "permissions": [
    "activeTab"
  ]
}
